# yaml-language-server: $schema=https://aka.ms/configuration-dsc-schema/0.2
properties:
  configurationVersion: "0.2.0"
  assertions:
    - resource: Microsoft.Windows.Developer/OsVersion
      directives:
        description: Verify min OS version requirement
        allowPrerelease: true
      settings:
        MinVersion: "10.0.22000"
  resources:
    # 修改系统设置部分
    - directives:
        description: ConfigureWindowsSettings
      resource: Microsoft.Windows.Settings/WindowsSettings
      settings:
        AppColorMode: Dark
        SystemColorMode: Dark
        TaskbarAlignment: Top
    
    - resource: PSDscResources/Service
      directives:
        description: Install Syncthing service
      settings:
        Name: syncthing
        Ensure: Presence
        State: Running
        StartupType: Automatic

    # 软件安装部分
    - directives:
        description: Install 7zip
      resource: Microsoft.WinGet.DSC/WinGetPackage
      settings:
        id: 7zip.7zip
        source: winget

    - directives:
        description: Install AutoHotkeyV2
      resource: Microsoft.WinGet.DSC/WinGetPackage
      settings:
        id: AutoHotkey.AutoHotkey

    - directives:
        description: Install AutoHotkeyV1
      resource: Microsoft.WinGet.DSC/WinGetPackage
      settings:
        id: AutoHotkey.AutoHotkey
        version: 1.1.37.02

    - directives:
        description: Install BilibiliLivehime
      resource: Microsoft.WinGet.DSC/WinGetPackage
      settings:
        id: Bilibili.Livehime

    - directives:
        description: Install FFmpeg
      resource: Microsoft.WinGet.DSC/WinGetPackage
      settings:
        id: BtbN.FFmpeg.GPL.Shared

    - directives:
        description: Install Caddy
      resource: Microsoft.WinGet.DSC/WinGetPackage
      settings:
        id: CaddyServer.Caddy

    - directives:

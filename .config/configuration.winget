      resource: Microsoft.WinGet.DSC/WinGetPackage
      settings:
        id: ZeroTier.ZeroTierOne

    - directives:
        description: Install Everything
      resource: Microsoft.WinGet.DSC/WinGetPackage
      settings:
        id: voidtools.Everything

    - directives:
        description: Install SpaceSniffer
      resource: Microsoft.WinGet.DSC/WinGetPackage
      settings:
